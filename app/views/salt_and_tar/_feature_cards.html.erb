<div class="flex flex-col m-2 justify-evenly items-center md:items-end w-full pt-8">
  <%= render "salt_and_tar/feature_card",
      alignment: "left",
      text: left_feature_card["text"].html_safe,
      image: "saltandtar/#{left_feature_card["image"]}",
      image_class: "drop-shadow-dark -mt-6 m-2 sm:mt-0 md:w-full sm:rotate-15 md:transform-none",
      button: feature_button(left_feature_card["button"])
  %>

  <%= render "salt_and_tar/feature_card",
      alignment: "right",
      text: right_feature_card["text"].html_safe,
      image: "saltandtar/#{right_feature_card["image"]}",
      image_class: "drop-shadow-dark -mb-4 m-2 sm:mb-0 md:w-full rounded-md border border-gray-800 sm:-rotate-15 md:transform-none",
      button: feature_button(right_feature_card["button"])
  %>
