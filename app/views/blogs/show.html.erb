<section class="w-full text-base-dark bg-slate-50 mt-2 py-4">
    <div class="flex justify-center items-center">
        <div class="flex flex-col items-center">
            <h1 class="font-bold text-xl md:text-2xl p-4">
                <%= @blog.title %>
            </h1>
            <% if @blog.blog_image.present? %>
                <%= image_tag @blog.blog_image, class: "md:rounded md:w-3/4 lg:w-4/5 h-96 object-cover" %>
            <% end %>
            <div class="flex justify-between md:w-3/4 lg:w-4/5 my-3 md:mx-1 w-full px-1">
                <span>Author: <%= @blog.milk_admin.email %></span>
                <span class="bg-input-border rounded-full px-5"><%= @blog.blog_category.title %></span>
            </div>
            <div class="flex justify-start md:w-3/4 lg:w-4/5 my-3 mx-1">
                <span>Created: <%= @blog.created_at.to_date.inspect %></span>
            </div>
            <div>
                <%= @blog.toc %>
            </div>
            <div class="md:w-3/4 lg:w-4/5 mx-2">
                <%= @blog.content %>
            </div>
        </div>
    </div>
</section>