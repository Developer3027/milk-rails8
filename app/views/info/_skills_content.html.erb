<section id="skills" class="bg-base-light text-base-dark dark:bg-base-dark dark:text-gray-50 w-full lg:max-w-[700px]" >
  <h2 class="text-3xl font-bold dark:text-milk-light text-base-dark">Skills</h2>
  <hr class="my-4 w-full dark:border-white border-base-dark">
  <div class="flex justify-center w-full">
    <div class="flex flex-col sm:flex-row sm:flex-wrap w-fit max-h-[450px] overflow-auto">
      <% @pills.each do |group, pills| %>
        <div class="flex flex-col items-center sm:grow dark:bg-slate-700 bg-swabbie-st-primary/20 rounded-md m-4 p-2">
          <h3><%= group %></h3>
          <% pills.each do |pill| %>
            <div class="bg-swabbie-st-drk-primary/40 w-fit rounded-md m-2 p-4">
              <!--Pill component-->
              <%= render PillComponent.new(skill: pill.skill, version: pill.version, version_color: pill.version_color) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>