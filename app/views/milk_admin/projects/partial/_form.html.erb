<%= form_with(model: [ :milk_admin, @project ], local: true) do |form| %>
  <div class="">

    <% if project.project_image.present? %>
      <div id="<%= dom_id(project, :project_image) %>" class="flex flex-col justify-center items-center">
          <%= image_tag project.project_image, class: "w-1/3 py-2" %>
          <%= link_to "Remove project image", destroy_image_milk_admin_project_path(project), class: "border border-input-background rounded-sm bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
      </div>
    <% end %>

    <div class="rounded-sm p-2">
      <div class="flex items-center">
        <%= form.label :project_image, "Select Image" %>&nbsp;
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V8m0 8h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          <span class="text-sm">w-200 x h-275 - 100kb</span>
        </svg>
      </div>
      <%= form.file_field :project_image, class: "block w-full text-sm border rounded-lg cursor-pointer text-gray-800 focus:outline-hidden bg-gray-600 border-gray-700" %>
    </div>
    <div class="border border-sky-900 rounded-md p-2 mb-1">
      <h2 class="text-xl font-medium text-sky-100 align-middle text-center p-2">Small Card</h2>
      <p class="text-white text-center mb-2">
        This is the small card that appears on the front page.
      </p>
      <div class="flex justify-between items-center my-2">
        <%= form.label :short_title, class: "w-52" %>
        <%= form.text_field :short_title, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :short_description, class: "w-52" %>
        <%= form.text_area :short_description, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
    </div>
    <div class="border border-sky-900 rounded-md p-2 mt-1">
      <h2 class="text-xl font-medium text-sky-100 align-middle text-center p-2"">Big Card</h2>
      <div class="flex justify-between items-center my-2">
        <%= form.label :title, class: "w-52" %>
        <%= form.text_field :title, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
      <div class="bg-slate-600 p-2 rounded-md">
        <%= form.label :description, class: "text-black mb-1" %>
        <%= form.rich_textarea :description, class: "w-[748px]" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :code_url, class: "w-52" %>
        <%= form.text_field :code_url, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :design_url, class: "w-52" %>
        <%= form.text_field :design_url, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :live_url, class: "w-52" %>
        <%= form.text_field :live_url, class: "rounded-md border border-slate-600 bg-slate-700 text-white w-full" %>
      </div>
      <div class="flex justify-between items-center my-2">
        <%= form.label :featured, class: "my-label-styles" do %>
          <%= form.check_box :featured, class: "my-checkbox-styles" %>
          Mark as Featured Project
        <% end %>
      </div>
    </div>
    <%= form.submit "Submit", class: "border border-pill-blue rounded-md px-4 py-1 mt-2" %>
  </div>
<% end %>