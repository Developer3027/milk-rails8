<%= turbo_frame_tag "dashboard_content" do %>
  <%= render "shared/admin_breadcrumbs", breadcrumbs: [{ name: "Songs" }] %>

  <!-- Header with Actions -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Songs Dashboard</h2>
    <%= link_to new_milk_admin_song_path, data: { turbo_frame: "dashboard_content" }, class: "inline-flex items-center gap-2 px-5 py-3 bg-sky-700 hover:bg-sky-600 text-white rounded-lg font-medium transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Song
    <% end %>
  </div>

  <!-- Main Metrics Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Total Songs -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Total Songs</p>
          <p class="text-3xl font-bold text-gray-900"><%= @total_songs %></p>
        </div>
        <div class="w-12 h-12 bg-sky-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Artists -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Artists</p>
          <p class="text-3xl font-bold text-purple-600"><%= @total_artists %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Albums -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Albums</p>
          <p class="text-3xl font-bold text-green-600"><%= @total_albums %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Total Genres -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Genres</p>
          <p class="text-3xl font-bold text-orange-600"><%= @total_genres %></p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Secondary Metrics Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <!-- Songs This Month -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Songs This Month</p>
        <% if @song_trend > 0 %>
          <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
            <%= @song_trend %>%
          </span>
        <% elsif @song_trend < 0 %>
          <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-red-700 bg-red-100 rounded-full">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
            <%= @song_trend.abs %>%
          </span>
        <% end %>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @songs_this_month %></p>
      <p class="text-xs text-gray-500 mt-1">vs <%= @songs_last_month %> last month</p>
    </div>

    <!-- Songs with Audio -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-2">With Audio Files</p>
      <p class="text-3xl font-bold text-blue-600"><%= @songs_with_audio %></p>
      <div class="w-full bg-gray-200 rounded-full h-2 mt-3">
        <div class="bg-blue-600 h-2 rounded-full" style="width: <%= @total_songs > 0 ? (@songs_with_audio.to_f / @total_songs * 100).round : 0 %>%"></div>
      </div>
    </div>

    <!-- Songs with Images -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-2">With Images</p>
      <p class="text-3xl font-bold text-indigo-600"><%= @songs_with_image %></p>
      <div class="w-full bg-gray-200 rounded-full h-2 mt-3">
        <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= @total_songs > 0 ? (@songs_with_image.to_f / @total_songs * 100).round : 0 %>%"></div>
      </div>
    </div>
  </div>

  <!-- Completion Status -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Complete Songs -->
    <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg shadow-sm border border-green-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-green-700 font-medium mb-1">Complete Songs</p>
          <p class="text-sm text-gray-600">With both audio & image</p>
          <p class="text-4xl font-bold text-green-700 mt-2"><%= @songs_complete %></p>
        </div>
        <div class="w-16 h-16 bg-green-200 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Incomplete Songs -->
    <div class="bg-gradient-to-br from-amber-50 to-yellow-50 rounded-lg shadow-sm border border-amber-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-amber-700 font-medium mb-1">Needs Attention</p>
          <p class="text-sm text-gray-600">Missing audio or image</p>
          <p class="text-4xl font-bold text-amber-700 mt-2"><%= @songs_incomplete %></p>
        </div>
        <div class="w-16 h-16 bg-amber-200 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Top Lists -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Top Artists -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Top Artists</h3>
      </div>
      <div class="p-6">
        <% if @top_artists.any? %>
          <div class="space-y-3">
            <% @top_artists.each do |artist| %>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-900"><%= artist.name %></span>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800">
                  <%= artist.songs_count %> <%= "song".pluralize(artist.songs_count) %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No artists yet</p>
        <% end %>
      </div>
    </div>

    <!-- Top Genres -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Top Genres</h3>
      </div>
      <div class="p-6">
        <% if @top_genres.any? %>
          <div class="space-y-3">
            <% @top_genres.each do |genre| %>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-900"><%= genre.name %></span>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-800">
                  <%= genre.songs_count %> <%= "song".pluralize(genre.songs_count) %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No genres yet</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Song List -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">All Songs</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Artist</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Album</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Genre</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @songs.any? %>
            <% @songs.each do |song| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= song.title %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= song.artist.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-500"><%= song.album&.title || "—" %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if song.album&.genre %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-800">
                      <%= song.album.genre.name %>
                    </span>
                  <% else %>
                    <span class="text-sm text-gray-400">—</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center justify-center gap-2">
                    <% if song.audio_file.attached? %>
                      <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full" title="Has audio">
                        <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                        </svg>
                      </span>
                    <% else %>
                      <span class="inline-flex items-center justify-center w-6 h-6 bg-gray-100 rounded-full" title="No audio">
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
                        </svg>
                      </span>
                    <% end %>
                    <% if song.image.attached? %>
                      <span class="inline-flex items-center justify-center w-6 h-6 bg-indigo-100 rounded-full" title="Has image">
                        <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                        </svg>
                      </span>
                    <% else %>
                      <span class="inline-flex items-center justify-center w-6 h-6 bg-gray-100 rounded-full" title="No image">
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to edit_milk_admin_song_path(song), data: { turbo_frame: "dashboard_content" }, class: "text-sky-600 hover:text-sky-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                    <%= button_to milk_admin_song_path(song), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this song?" }, class: "text-red-600 hover:text-red-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center">
                  <svg class="w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                  </svg>
                  <p class="text-gray-500 mb-4">No songs yet</p>
                  <%= link_to "Add Your First Song", new_milk_admin_song_path, data: { turbo_frame: "dashboard_content" }, class: "inline-flex items-center gap-2 px-5 py-3 bg-sky-700 hover:bg-sky-600 text-white rounded-lg font-medium transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
