<div class="flex justify-start items-center w-full mt-2">
  <div class="flex justify-center items-center">
    <div class="flex flex-col justify-between items-start">
        <h1 class="font-bold text-xl">Admin Dashboard</h1>
        Logged in as: <%= @milk_admin.email %>
        <div class="flex justify-between items-center w-full">
          <%= button_to "Log Out", destroy_milk_admin_session_path, method: :delete, class: "border border-gray-100 rounded-md bg-orange-800 px-4 my-2" %>
          <%= link_to "Home", root_path, class: "text-sky-400 underline" %>
        </div>
        <div class="text-base-light border border-base-light rounded-md p-2 my-4">
          <h2 class="font-medium text-base-light text-xl my-4">Message Center</h2>
          <div class="flex flex-col">
            <% @contacts.map do |contact| %>
              <div class="bg-sky-950 p-2 rounded-md">
                <p><%= contact.created_at %></p>
                <p class="my-2"><%= contact.f_name %> <%= contact.l_name %>: <%= contact.email %></p>
                <p class="mb-4"><%= contact.description %></p>
                <%= button_to 'Delete', delete_contact_path(contact), method: :delete, data: { confirm: 'Are you sure you want to delete this message?' }, class: "border border-gray-100 rounded-md bg-red-800 px-4 my-6" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>