<header class="bg-white border-b sticky top-0 z-50 w-full">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-20">

    <!-- Left: Logo -->
    <div class="flex-shrink-0">
      <%= link_to root_path, class: "text-xl font-semibold tracking-tight" do %>
        <%= image_tag "RogueMediaLab.png", alt: "Site Logo", class: "h-8" %>
      <% end %>
    </div>

    <!-- Center: Navigation -->
    <div class="flex flex-col items-center">
      <%# Publication Title - pulled from SiteSetting %>
      <h1 class="text-xl md:text-2xl font-extrabold text-gray-900 my-1">
        Rogue Media Lab
        <%#= SiteSetting.current.publication_title %>
      </h1>
      <nav class="hidden md:flex space-x-8 text-sm font-medium text-gray-700">
        <%= link_to "Home", blogs_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
        <%= link_to "Archive", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
        <%= link_to "Notes", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
      </nav>
    </div>

    <!-- Right: Menu button -->
    <div class="flex items-center space-x-4">
    </div>

  </div>
</header>
