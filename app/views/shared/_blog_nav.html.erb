<header class="w-full bg-slate-200 text-base-dark">
  <div class="flex justify-center items-center">
    <!-- set max width 896px -->
    <div class="flex w-full max-w-4xl p-3 border-b-4 border-base-dark justify-start items-center">
      <!-- Blog Header -->
      <div class="flex mr-2">
        <%= link_to root_path, class: "p-2 rounded-full bg-base-dark items-center me-2" do %>
          <%= image_tag "MILK8.png", alt: "hermit plus logo", class: "w-10" %>
        <% end %>
      </div>
      <div class="flex flex-col w-full py-5">
        <%= link_to blogs_path do %>
          <h1 class="font-bold text-xl">
            MILK-00 Blog Articles
          </h1>
        <% end %>
        <p>
          Find me on <%= link_to "SubStack", "https://masonroberts.substack.com/", target: "_blank", class: "font-medium text-milk-dark underline" %>
        </p>
        <div class="flex justify-between items-center w-full">
          <p>
            <i>Welcome to the ramblings of my learning journey.</i>
          </p>
          <p>
            <%= link_to "Return Home", blogs_path, class: "font-medium text-milk-dark underline" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</header>