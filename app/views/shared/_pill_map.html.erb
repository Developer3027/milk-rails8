    <ul>
      <!-- Map colors and groups -->
      <% @colors_groups.each do |color, group| %>
        <li id="color-group" data-controller="copy-clipboard" data-action="click->copy-clipboard#copyColor" class="flex justify-between items-center w-full text-gray-700 p-2 cursor-pointer" style="background-color: <%= color %>"><%= color %>&nbsp;<%= group %>
          <svg class="w-6 h-6 text-gray-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M18 3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-1V9a4 4 0 0 0-4-4h-3a1.99 1.99 0 0 0-1 .267V5a2 2 0 0 1 2-2h7Z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M8 7.054V11H4.2a2 2 0 0 1 .281-.432l2.46-2.87A2 2 0 0 1 8 7.054ZM10 7v4a2 2 0 0 1-2 2H4v6a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3Z" clip-rule="evenodd"/>
          </svg>
        </li>
      <% end %>
    </ul>

    <!-- Copy Notification -->
    <div id="notification" class="hide fixed top-0 right-0 m-4 p-2 bg-green-500 text-white rounded shadow-lg"></div>
    