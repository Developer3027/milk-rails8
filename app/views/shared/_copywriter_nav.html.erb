      <div class="hidden lg:flex gap-5 items-center mt-0 p-1 rounded-md">
        <%= link_to "Home", 
                    root_path, 
                    class: "pt-[11px] 
                            pb-[12px] 
                            px-2 
                            font-medium 
                            text-slate-800 
                            rounded-md
                            hover:text-sky-300 
                            hover:bg-slate-800
                            ease-in-out 
                            duration-300 
                            focus:outline-none 
                            focus:text-sky-800", 
                    aria: { label: "Home" } %>

        <%= link_to "About Us",
                    root_path,
                    class: "pt-[11px] 
                            pb-[12px] 
                            px-2 
                            font-medium 
                            text-slate-800 
                            rounded-md
                            hover:text-sky-300 
                            hover:bg-slate-800
                            ease-in-out 
                            duration-300  
                            focus:outline-none 
                            focus:text-sky-800",
                    aria: { label: "About Us" } %>

        <%= link_to "Clients",
                    root_path,
                    class: "pt-[11px] 
                            pb-[12px] 
                            px-2 
                            font-medium 
                            text-slate-800 
                            rounded-md
