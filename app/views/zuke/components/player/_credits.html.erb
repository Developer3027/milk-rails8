<div class="w-full bg-slate-900 border-t border-slate-700"
     data-controller="music--credits"
     data-music--credits-target="container">

  <!-- Toggle Button -->
  <button type="button"
          class="w-full px-4 py-3 flex items-center justify-between text-gray-300 hover:text-white transition-colors"
          data-action="click->music--credits#toggle"
          data-music--credits-target="toggleButton">
    <span class="text-sm font-medium">Song Credits & Attribution</span>
    <svg class="w-5 h-5 transform transition-transform duration-200"
         data-music--credits-target="arrow"
         xmlns="http://www.w3.org/2000/svg"
         fill="none"
         viewBox="0 0 24 24"
         stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <!-- Credits Content (Hidden by default) -->
  <div class="overflow-hidden transition-all duration-300"
       style="max-height: 0px"
       data-music--credits-target="content">
    <div class="px-4 pb-4 space-y-3 text-sm">

      <!-- Song & Artist -->
      <div class="border-b border-slate-700 pb-3">
        <div class="flex items-center gap-2 mb-1">
          <svg class="w-4 h-4 text-lime-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
          <h3 class="text-white font-semibold">Music</h3>
        </div>
        <p class="text-gray-300" data-music--credits-target="songTitle">-</p>
        <p class="text-gray-400 text-xs" data-music--credits-target="artistName">-</p>
      </div>

      <!-- Image Credit -->
      <div class="hidden" data-music--credits-target="imageCredit">
        <div class="flex items-center gap-2 mb-1">
          <svg class="w-4 h-4 text-purple-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="text-white font-semibold">Image by</h3>
        </div>
        <p class="text-gray-300">
          <span data-music--credits-target="imageCreditName">-</span>
        </p>
        <a href="#"
           class="text-lime-500 hover:text-lime-400 text-xs underline hidden"
           target="_blank"
           rel="noopener noreferrer"
           data-music--credits-target="imageCreditUrl">View artist's work</a>
        <p class="text-gray-500 text-xs mt-1 hidden" data-music--credits-target="imageLicense">-</p>
      </div>

      <!-- Audio Source -->
      <div class="hidden" data-music--credits-target="audioSource">
        <div class="flex items-center gap-2 mb-1">
          <svg class="w-4 h-4 text-orange-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          <h3 class="text-white font-semibold">Audio Source</h3>
        </div>
        <a href="#"
           class="text-lime-500 hover:text-lime-400 text-sm underline"
           target="_blank"
           rel="noopener noreferrer"
           data-music--credits-target="audioSourceUrl">View source</a>
        <p class="text-gray-500 text-xs mt-1 hidden" data-music--credits-target="audioLicense">-</p>
      </div>

      <!-- Additional Credits -->
      <div class="hidden" data-music--credits-target="additionalCredits">
        <div class="flex items-center gap-2 mb-1">
          <svg class="w-4 h-4 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 class="text-white font-semibold">Additional Credits</h3>
        </div>
        <p class="text-gray-300 whitespace-pre-wrap" data-music--credits-target="additionalCreditsText">-</p>
      </div>

      <!-- No Credits Message -->
      <div class="text-gray-500 text-center py-4" data-music--credits-target="noCredits">
        No attribution information available for this song.
      </div>

    </div>
  </div>
</div>
